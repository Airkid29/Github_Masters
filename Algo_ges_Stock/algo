ALGORITHME : GESTION_DE_STOCK
// Objectif : Définir la logique complète d'une application de gestion de stock
//  Nous essaieorons selon la consigne donnée en classe d'enumerer et de parcourir tous les
// concepts algorithmiques fondamentaux

DEBUT

    // INITIALISATION

    stock ← liste vide
    id_produit ← 1

    // BOUCLE PRINCIPALE DU PROGRAMME

    TANT QUE vrai FAIRE

        // Affichage du menu principal
        AFFICHER "1 - Ajouter un produit"
        AFFICHER "2 - Approvisionner le stock"
        AFFICHER "3 - Sortir un produit"
        AFFICHER "4 - Afficher le stock"
        AFFICHER "5 - Vérifier les alertes"
	AFFICHER "6 - Suppression de produit"
        AFFICHER "0 - Quitter"

        LIRE choix

        SELON choix FAIRE

            // CAS 1 : AJOUT D'UN PRODUIT

            CAS 1 :
                AFFICHER "Nom du produit"
                LIRE nom

                AFFICHER "Catégorie"
                LIRE categorie

                AFFICHER "Prix unitaire"
                LIRE prix

                AFFICHER "Quantité initiale"
                LIRE quantite

                AFFICHER "Seuil minimum"
                LIRE seuil

                // Vérification de la validité des données
                SI prix ≤ 0 OU quantite < 0 OU seuil < 0 ALORS
                    AFFICHER "Données invalides"
                SINON
                    produit ← {
                        id : id_produit,
                        nom : nom,
                        categorie : categorie,
                        prix : prix,
                        quantite : quantite,
                        seuil : seuil
                    }

                    AJOUTER produit AU stock
                    id_produit ← id_produit + 1

                    AFFICHER "Produit ajouté avec succès"
                FIN SI
            FIN CAS


            // CAS 2 : APPROVISIONNEMENT

            CAS 2 :
                AFFICHER "ID du produit"
                LIRE pid

                AFFICHER "Quantité à ajouter"
                LIRE qte

                trouve ← FAUX

                POUR CHAQUE produit DANS stock FAIRE
                    SI produit.id = pid ALORS
                        trouve ← VRAI

                        SI qte > 0 ALORS
                            produit.quantite ← produit.quantite + qte
                            AFFICHER "Stock mis à jour"
                        SINON
                            AFFICHER "Quantité invalide"
                        FIN SI
                    FIN SI
                FIN POUR

                SI trouve = FAUX ALORS
                    AFFICHER "Produit introuvable"
                FIN SI
            FIN CAS


            // CAS 3 : SORTIE DE STOCK

            CAS 3 :
                AFFICHER "ID du produit"
                LIRE pid

                AFFICHER "Quantité à sortir"
                LIRE qte

                trouve ← FAUX

                POUR CHAQUE produit DANS stock FAIRE
                    SI produit.id = pid ALORS
                        trouve ← VRAI

                        SI qte ≤ produit.quantite ALORS
                            produit.quantite ← produit.quantite - qte
                            AFFICHER "Sortie effectuée"
                        SINON
                            AFFICHER "Stock insuffisant"
                        FIN SI
                    FIN SI
                FIN POUR

                SI trouve = FAUX ALORS
                    AFFICHER "Produit introuvable"
                FIN SI
            FIN CAS


            // CAS 4 : AFFICHAGE DU STOCK

            CAS 4 :
                SI stock est vide ALORS
                    AFFICHER "Stock vide"
                SINON
                    POUR CHAQUE produit DANS stock FAIRE
                        valeur ← produit.prix × produit.quantite

                        AFFICHER "ID :", produit.id
                        AFFICHER "Nom :", produit.nom
                        AFFICHER "Quantité :", produit.quantite
                        AFFICHER "Valeur :", valeur
                    FIN POUR
                FIN SI
            FIN CAS


            // CAS 5 : VERIFICATION DES ALERTES

            CAS 5 :
                alerte ← FAUX

                POUR CHAQUE produit DANS stock FAIRE
                    SI produit.quantite ≤ produit.seuil ALORS
                        AFFICHER "ALERTE : ", produit.nom, " stock faible"
                        alerte ← VRAI
                    FIN SI
                FIN POUR

                SI alerte = FAUX ALORS
                    AFFICHER "Aucune alerte"
                FIN SI
            FIN CAS
	   


	// CAS 6 :SUPPRESSION D'UN PRODUIT

	AFFICHER "ID du produit à supprimer"
        LIRE pid

          trouve ← FAUX

          POUR CHAQUE produit DANS stock FAIRE
              		SI produit.id = pid ALORS
		        SUPPRIMER produit DU stock
		        trouve ← VRAI
		 	AFFICHER "Produit supprimé avec succès"
    		FIN SI
	  FIN POUR

	SI trouve = FAUX ALORS
	    AFFICHER "Produit introuvable"
	FIN SI


		


            // CAS 0 : FIN DU PROGRAMME

            CAS 0 :
                AFFICHER "Fin du programme"
                SORTIR DE LA BOUCLE


            // CAS PAR DEFAUT

            AUTRE :
                AFFICHER "Choix invalide"

        FIN SELON

    FIN TANT QUE

FIN
